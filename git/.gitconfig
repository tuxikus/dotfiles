[includeIF "gitdir:~/personal/"]
  path = ~/.gitconfig.personal

[includeIF "gitdir:~/work/"]
  path = ~/.gitconfig.work

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    side-by-side = true

[merge]
    conflictStyle = diff3
    tool = helix

[mergetool "helix"]
    cmd = hx "$MERGED"
    trustExitCode = true

[mergetool]
    prompt = false
